      "gemara_segment_ids": [
        1
      ]
    },
    {
      "width": "250px",
      "right": "",
      "left": "0px",
      "text": "<b>נְדָרִים הַלָּלוּ.</b> והני הוא דשרו משום",
      "source_ref": "Rashi on Nedarim 21b:2:1",
