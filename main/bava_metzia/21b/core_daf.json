      "gemara_segment_ids": [
        1
      ]
    },
    {
      "width": "250px",
      "right": "0px",
      "left": "",
      "text": "דנתרא מעיקרא מתיאש לפי שסבור",
      "source_ref": "Tosafot on Bava Metzia 21b:2:1",
      "gemara_segment_ids": [
        1
      ]
    },
    {
      "width": "250px",
      "right": "0px",
      "left": "",
      "text": "שהמוצא יקחנה כי הוא לא ידע",
