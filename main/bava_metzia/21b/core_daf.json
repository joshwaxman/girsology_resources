      "gemara_segment_ids": [
        1
      ]
    },
    {
      "width": "250px",
      "right": "0px",
      "left": "",
      "text": "מעוברי דרכים השתא דלא ידע סבור",
      "source_ref": "Tosafot on Bava Metzia 21b:2:1",
      "gemara_segment_ids": [
        1
      ]
    },
    {
      "width": "250px",
      "right": "0px",
      "left": "",
      "text": "שלא נפלו אסורה דהוה ליה יאוש",
