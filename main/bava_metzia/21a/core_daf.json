      "gemara_segment_ids": [
        7
      ]
    },
    {
      "width": "250px",
      "right": "0px",
      "left": "",
      "text": "נקשר עליהן הרי הוא נשחת: <b><span class=\"dh-divergent\">של</span></b>",
