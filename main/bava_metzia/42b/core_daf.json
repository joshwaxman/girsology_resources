      "gemara_segment_ids": [
        0
      ]
    },
    {
      "width": "250px",
      "right": "0px",
      "left": "",
      "text": "<big><b>נימא ליה לאפוטרופוס זיל שלים",
      "source_ref": "Tosafot on Bava Metzia 42b:1:1",
      "gemara_segment_ids": [
        0
      ]
    },
    {
      "width": "200px",
      "right": "50px",
      "left": "",
