      "gemara_segment_ids": [
        0
      ]
    },
    {
      "width": "250px",
      "right": "",
      "left": "0px",
      "text": "בין בגנבה בין באונסין דמדשלח",
      "source_ref": "Rashi on Bava Metzia 41b:1:1",
      "gemara_segment_ids": [
