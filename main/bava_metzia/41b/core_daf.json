      "gemara_segment_ids": [
        0
      ]
    },
    {
      "width": "250px",
      "right": "",
      "left": "0px",
      "text": "בשומר שכר וכתיב בתרוייהו אם לא",
      "source_ref": "Rashi on Bava Metzia 41b:1:1",
