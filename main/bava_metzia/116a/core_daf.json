      "segment_ids": [
        5
      ]
    },
    {
      "right": "275px",
      "width": "380px",
      "text": "חוּשְׁלָא בִּנְהַרְדְּעָא, וַאֲתָא מָרָא דְחוּשְׁלָא וּתְפַס",
      "segment_ids": [
        5
      ]
    },
    {
      "right": "275px",
      "width": "380px",
      "text": "לְהוּ וְקָא טָעֵין טוּבָא. וַאֲמַר אֲבוּהּ דִּשְׁמוּאֵל",
      "segment_ids": [
        5
      ]
