      "gemara_segment_ids": [
        0
      ]
    },
    {
      "width": "250px",
      "right": "0px",
      "left": "",
      "text": "רוב הסימנים היא שורפת את",
      "source_ref": "Rashi on Chullin 8a:1:4",
      "gemara_segment_ids": [
        0
      ]
    },
    {
      "width": "250px",
      "right": "0px",
      "left": "",
      "text": "הסימנים ונמצאת שהיא נשרפה קודם",
