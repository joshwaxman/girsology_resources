      "gemara_segment_ids": [
        5
      ]
    },
    {
      "width": "250px",
      "right": "0px",
      "left": "",
      "text": "לכבודו ולמצותו שינה: <b><span class=\"dh-divergent\">מנדדות</span></b>",
