      "gemara_segment_ids": [
        0
      ]
    },
    {
      "width": "250px",
      "right": "",
      "left": "0px",
      "text": "עסקינן מיהו הא דאמור רבנן",
      "source_ref": "Rashi on Chagigah 21b:1:1",
      "gemara_segment_ids": [
        0
      ]
    },
    {
      "width": "250px",
      "right": "",
      "left": "0px",
      "text": "משקין מטמאין כלי משום גזרה",
